generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  secureId String @unique
  email    String @unique
  name     String
  password String
}

model units {
  id                 Int                  @id @default(autoincrement())
  secureId           String               @unique
  unitOrder          Int
  name               String
  unitquestionImages unitQuestionImages[]
}

model unitQuestionImages {
  id             Int    @id @default(autoincrement())
  secureId       String @unique
  unit           units  @relation(fields: [unitId], references: [id], onDelete: Cascade)
  unitId         Int
  questionOrder  Int
  questionImage  String
  questionAnswer String
}
